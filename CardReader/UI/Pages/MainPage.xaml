                   Margin="8,0"/>
            <TextBlock x:Name="AppTitleTextBlock" x:FieldModifier="public" Text="{x:Bind ViewModel.AppTitleText}"
                       TextWrapping="NoWrap"
                       Style="{StaticResource CaptionTextBlockStyle}" 
                       VerticalAlignment="Center"
                       Margin="32,0,0,0">
                <Interactivity:Interaction.Behaviors>
                    <Core:DataTriggerBehavior Binding="{x:Bind ViewModel.IsMainWindowActive, Mode=OneWay}" ComparisonCondition="Equal" Value="true">
                        <Core:ChangePropertyAction PropertyName="Foreground" Value="{ThemeResource WindowCaptionForeground}"/>
                    </Core:DataTriggerBehavior>
                    <Core:DataTriggerBehavior Binding="{x:Bind ViewModel.IsMainWindowActive, Mode=OneWay}" ComparisonCondition="Equal" Value="false">
                        <Core:ChangePropertyAction PropertyName="Foreground" Value="{ThemeResource WindowCaptionForegroundDisabled}"/>
                    </Core:DataTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </TextBlock>
        </Grid>-->
        <NavigationView x:Name="NavigationView" MenuItemsSource="{x:Bind ViewModel.MenuItems, Mode=TwoWay}" SelectedItem="{x:Bind ViewModel.SelectedMenuItem}"
                        IsTitleBarAutoPaddingEnabled="False" DisplayModeChanged="NavigationView_DisplayModeChanged" Loaded="NavigationView_Loaded">
            <NavigationView.MenuItemTemplate>
                <DataTemplate x:DataType="vm:MenuItemViewModel">
                    <NavigationViewItem Tag="{x:Bind Tag}" Icon="{x:Bind Icon, Mode=OneWay, Converter={StaticResource SymbolToIconElementConverter}}"
                                        Content="{x:Bind Name, Mode=OneWay}" MenuItemsSource="{x:Bind Children, Mode=OneWay}"/>
                </DataTemplate>
            </NavigationView.MenuItemTemplate>

            <ScrollViewer>
                <Frame x:Name="ContentFrame"/>
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Page>
